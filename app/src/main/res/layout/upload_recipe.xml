<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:scaleType="centerCrop"
            android:id="@+id/iv_foodImage"
            android:src="@drawable/chef"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Recipy Name"
            android:padding="18dp"
            android:textSize="19sp"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_recipy_name"
            android:textColorHint="@color/black"
            android:background="@color/white"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Preparation time"
            android:padding="18dp"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/txt_recipy_preptime"
            android:textColorHint="@color/black"
            android:background="@color/white"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingridients"
            android:padding="18dp"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/txt_recipy_description"
            android:textColorHint="@color/black"
            android:background="@color/white"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instructions"
            android:padding="18dp"
            android:layout_marginTop="10dp"
            android:textSize="19sp"
            android:id="@+id/txt_recipy_instruction"
            android:textColorHint="@color/black"
            android:background="@color/white"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/uploadButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Upload Recipy"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:onClick="btnUploadRecipe"
            android:backgroundTint="#FF8F00"
            android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/selectPictureButton"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Select Picture"
            android:textSize="22sp"
            android:layout_marginTop="10dp"
            android:onClick="btnSelectPicture"
            android:backgroundTint="#FF8F00"
            android:textColor="@color/black"  />

    </LinearLayout>

</ScrollView>